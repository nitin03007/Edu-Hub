<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Expert Teachers</title>
    <!-- Jquery Link -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
</head>
<body>
   <%- include('./partials/header'); %>


   <section class="teachers">

    <h1 class="heading">expert teachers</h1>
 
    <form action="" method="post" class="search-tutor">
       <input type="text" name="search_box" placeholder="search tutors..." required maxlength="100">
       <button type="submit" class="fas fa-search" name="search_tutor"></button>
    </form>
 
    <div class="box-container">
        
        <% teacher_detail.forEach(element => { %>
         
            <div class="box">
               <div class="tutor">
                  <img src="/backendImages/<%= element.img %>" alt="">
                  <div>
                     <h3><%= element.name %></h3>
                     <!-- <span>developer</span> -->
                  </div>
               </div>
               <p>total playlists : <span><%= element.playlists %></span></p>
               <p>total videos : <span><%= element.videos %></span></p>
               <!-- <p>total likes : <span>1208</span></p> -->
               <a href="/view_profile?teacher_email=<%= element.email %>&teacher_name=<%= element.name %>" class="inline-btn">view profile</a>
            </div>

        <% }) %>
 
 
    </div>
 
 </section>
 



<%- include('./partials/footer'); %>
</body>
</html>