<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>

   <!-- Jquery Link  -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

    <!-- font awesome cdn link  -->
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css">

   <!-- custom css file link  -->
   <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>

   <%- include('./chatbot') %>

    <!-- Header Section Starts  -->

    <header class="header">
   
   <section class="flex">
      
      <% if (data.role=='Teacher') { %>
         <a href="/t_home" class="logo">Learning Hub</a>
      <% } else if (data.role=='Student') { %>
         <a href="/home" class="logo">Learning Hub</a>
      <% } else { %>
         <a href="/home" class="logo">Learning Hub</a>
      <% } %>


      
      <!-- <% if (data.role=='Student') { %>
         <a href="/home" class="logo">Learning Hub</a>
      <% } %> -->
      
       
       
      

      <form action="search.html" method="post" class="search-form">
         <input type="text" name="search_box" required placeholder="search courses..." maxlength="100">
         <button type="submit" class="fas fa-search"></button>
      </form>

      <div class="icons">
         <div id="menu-btn" class="fas fa-bars"></div>
         <div id="search-btn" class="fas fa-search"></div>
         <div id="user-btn" class="fas fa-user"></div>
         <div id="toggle-btn" class="fas fa-sun"></div>
      </div>

      <div class="profile">
         <% if (data && data.profileImg) { %>
            <img src="/backendImages/<%= data.profileImg %>" class="image" alt="">
         <% } else { %>
            <img src="/images/pic-1.jpg" class="image" alt="">
         <% } %>

         <% if (data && data.name) { %>
            <h3 class="name"><%= data.name %></h3>
            <p class="role"><%= data.role %></p>
        <% } else { %>
            <h1>Login First</h1>
        <% } %>

        <a href="/view_profile?teacher_email=<%= data.email %>&teacher_name=<%= data.name %>" class="btn">view profile</a>

         <% if (data && data.name) { %>
            <a href="/logout" class="option-btn">Logout</a>
         <% } else { %>
            <div class="flex-btn">
               <a href="/" class="option-btn">login</a>
               <a href="/signup" class="option-btn">register</a>
            </div>
         <% } %>
         
      </div>

    </section>

    </header><div class="side-bar">

   <div id="close-btn">
      <i class="fas fa-times"></i>
   </div>

   <div class="profile">
      <% if (data && data.profileImg) { %>
          <img src="/backendImages/<%= data.profileImg %>" class="image" alt="">
      <% } else { %>
          <img src="/images/pic-1.jpg" class="image" alt="">
      <% } %>

      <% if (data && data.name) { %>
          <h3 class="name"><%= data.name %></h3>
          <% if (data.role) { %>
              <p class="role"><%= data.role %></p>
          <% } %>
      <% } else { %>
          <h1>Login First</h1>
      <% } %>

      <a href="/view_profile?teacher_email=<%= data.email %>&teacher_name=<%= data.name %>" class="btn">view profile</a>
  </div>

   <nav class="navbar">

      <% if (data.role=='Teacher') { %>
         <a href="/t_home"><i class="fas fa-home"></i><span>home</span></a>
      <% } %>
      <% if (data.role=='Student') { %>
         <a href="/home"><i class="fas fa-home"></i><span>home</span></a>
      <% } %>
      <a href="/about"><i class="fas fa-question"></i><span>about</span></a>
      <a href="/courses"><i class="fas fa-graduation-cap"></i><span>courses</span></a>
      <a href="/teachers"><i class="fas fa-chalkboard-user"></i><span>teachers</span></a>
      <a href="/contactus"><i class="fas fa-headset"></i><span>contact us</span></a>
   </nav>

</div>






    <!-- custom js file link  -->
<script src="/javascripts/script.js"></script>
</body>
</html>