<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>

    <!-- Jquery Link  -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

   <!-- font awesome cdn link   -->
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css">

   <!-- custom css file link  -->
   <link rel="stylesheet" href="/stylesheets/style.css">

   <script src="/video_script.js"></script>
</head>
<body>
    <%- include('./partials/header'); %>
    <section class="form-container">

   <form id="videoForm" action="\v_upload" method="post" enctype="multipart/form-data" >
     <!-- enctype="multipart/form-data"  -->
      <h3>Upload Your Video</h3>
      <p>Video Title<span>*</span></p>
      <input type="text" name="title" placeholder="enter your Video Title" required maxlength="100" class="box">
      <p>Description<span>*</span></p>
      <textarea name="description" placeholder="enter your video description" id="description" cols="20" rows="5    " required class="box"></textarea>
      <p>select Playlist or Create New from the Home Page <span>*</span></p>
      <select name="playlist" id=""  class="box">
        <% playList.forEach(element => { %>
          <option value="<%= element.playlist_name %>"><%= element.playlist_name %></option>
         <% }) %>
      </select>
      <input type="text" name="teacher_email" value="<%= data.email %>" hidden>
      <input type="text" name="teacher_Name" value="<%= data.name %>" hidden>
      <input type="text" name="teacher_Img" value="<%= data.profileImg %>" hidden>
      <p>select Video Thumbnail <span>*</span></p>
      <input type="file" accept="image/*"  class="box" name="v_thumbnail">
      <p> Upload Video or Link<span>*</span></p>
      <!-- <input type="file" accept="image/*"  class="box" name="video"> -->
      <input type="file" accept="video/*"  class="box" name="video">
      <input type="submit" value="Upload" name="submit" class="btn">

   </form>

</section>


<%- include('./partials/footer'); %>
    <!-- custom js file link  -->
<!-- <script src="/javascripts/script.js"></script> -->
</body>
</html>
